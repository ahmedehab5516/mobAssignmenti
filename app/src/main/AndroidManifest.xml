<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinemaApp"
        android:name=".di.CinemaApp"
        tools:targetApi="35">

        <activity
            android:name=".presentation.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CinemaApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="false"
            android:theme="@android:style/Theme.NoDisplay" />

        <activity
            android:name=".presentation.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaApp" />

        <activity
            android:name=".presentation.home.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaApp" />

        <activity
            android:name=".presentation.moviedetail.MovieDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaApp" />

        <activity
            android:name=".presentation.seatbooking.SeatSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaApp" />

        <activity
            android:name=".presentation.seatbooking.BookingConfirmationActivity"
            android:exported="false"
            android:theme="@style/Theme.CinemaApp" />
    </application>

</manifest>